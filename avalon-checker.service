[Unit]
Description=Avalon node checker
After=network.target
StartLimitIntervalSec=3
StartLimitBurst=100
[Service]
Type=simple
Restart=always
ExecStart=node avalon-checker.js
WorkingDirectory=/srv/servers/
KillMode=control-group
KillSignal=2
SendSIGHUP=yes
RestartSec=3

[Install]
WantedBy=multi-user.target
